{
    "componentPath": "./src/wwObject.vue",
    "options": {
        "autoByContent": true
    },
    "editor": {
        "label": {
            "en": "Button",
            "fr": "Bouton"
        },
        "menuOptions": {
            "items": [
                {
                    "name": "Font size",
                    "quick": [{ "type": "custom-style", "name": "fontSize" }],
                    "icon": "Size"
                },
                {
                    "name": "Tag",
                    "quick": [{ "type": "Link" }],
                    "icon": "link"
                }
            ]
        },
        "styleOptions": {
            "fontSize": {
                "type": "Length",
                "label": {
                    "en": "Size",
                    "fr": "Taille"
                },
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 1, "max": 100 }]
                },
                "path": "globalStyle.fontSize"
            },
            "textColor": {
                "type": "Color",
                "label": {
                    "en": "Text color",
                    "fr": "Couleur du texte"
                },
                "path": "globalStyle.color"
            },
            "transformation": {
                "label": {
                    "en": "Character case",
                    "fr": "Character case"
                },
                "type": "TextSelect",
                "options": {
                    "options": [
                        { "value": null, "label": "none" },
                        { "value": "capitalize", "label": "capitalize" },
                        { "value": "uppercase", "label": "uppercase" },
                        { "value": "lowercase", "label": "lowercase" }
                    ]
                },
                "path": "globalStyle.textTransform"
            },
            "shadows": {
                "label": {
                    "en": "Text Shadows",
                    "fr": "Ombres du texte"
                },
                "type": "Shadows",
                "options": {
                    "isText": true
                },
                "path": "globalStyle.textShadow"
            },
            "lineHeight": {
                "label": {
                    "en": "Line height",
                    "fr": "Hauteur de ligne"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.lineHeight"
            },
            "wordSpacing": {
                "label": {
                    "en": "Word spacing",
                    "fr": "Espacement des mots"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.wordSpacing"
            }
        },
        "settingsOptions": {
            "hasLeftIcon": {
                "label": { "en": "Left icon", "fr": "Icône gauche" },
                "type": "OnOff"
            },
            "hasRightIcon": {
                "label": { "en": "Right icon", "fr": "Icône droite" },
                "type": "OnOff"
            }
        }
    }
}
