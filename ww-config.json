{
    "componentPath": "./src/wwObject.vue",
    "options": {
        "autoByContent": true
    },
    "editor": {
        "label": {
            "en": "Button",
            "fr": "Bouton"
        },
        "styleOptions": {
            "transformation": {
                "label": {
                    "en": "Transformation",
                    "fr": "Transformation"
                },
                "type": "TextSelect",
                "options": {
                    "options": [
                        { "value": null, "label": "none" },
                        { "value": "capitalize", "label": "capitalize" },
                        { "value": "uppercase", "label": "uppercase" },
                        { "value": "lowercase", "label": "lowercase" }
                    ]
                },
                "path": "globalStyle.textTransform"
            },
            "shadows": {
                "label": {
                    "en": "Text Shadows",
                    "fr": "Ombres du texte"
                },
                "type": "Shadows",
                "options": {
                    "isText": true
                },
                "path": "globalStyle.textShadow"
            },
            "lineHeight": {
                "label": {
                    "en": "Line height",
                    "fr": "Hauteur de ligne"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.lineHeight"
            },
            "wordSpacing": {
                "label": {
                    "en": "Word spacing",
                    "fr": "Espacement des mots"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.wordSpacing"
            }
        },
        "settingsOptions": {
            "hasLeftIcon": {
                "label": { "en": "Left icon", "fr": "Icône gauche" },
                "type": "TextRadioGroup",
                "options": {
                    "choices": [
                        { "title": "off", "value": false, "label": "Off" },
                        { "title": "on", "value": true, "label": "On" }
                    ]
                }
            },
            "hasRightIcon": {
                "label": { "en": "Right icon", "fr": "Icône droite" },
                "type": "TextRadioGroup",
                "options": {
                    "choices": [
                        { "title": "off", "value": false, "label": "Off" },
                        { "title": "on", "value": true, "label": "On" }
                    ]
                }
            }
        }
    }
}
